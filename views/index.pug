doctype html
html(lang='en')
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Flashcards
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
  link(href='https://fonts.googleapis.com/css?family=Press+Start+2P|Staatliches|Ranchers' rel='stylesheet')

body
  .container
    h1 Flashcards
    #header2
      h6 
        br
        |  for Software Engineers
        br
        br
  form(action='/flashcards' method='POST')
    .container#flashcardsUploaded
      .row
        input(type='text' placeholder='Enter question' name='question')
      .row    
        input(type='text' placeholder='Enter answer' name='answer')
      .row
        input(type='text' placeholder='Enter hint' name='hint')
      button#submit(type='submit') Submit


      

  button#addCard(type='submit') Create Flashcard


    .container#flashcardsLoaded
      .row
        #question(type='text' placeholder='question' name='question')
      .row    
        #hint(type='text' placeholder='answer' name='answer')
      .row
        #answer(type='text' placeholder='hint' name='hint')
      .row
        .col
          button#submit(type='submit') Hint
        .col
          button#submit(type='submit') Answer
      .row
        button#submit(type='submit') Next Card


  ul(class="flashcards")
    each question in flashcards
      li(class="quote")
      span= question.question + " "
      span= question.hint + " "
      span= question.answer


script(src='https://code.jquery.com/jquery-3.3.1.min.js' integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=' crossorigin='anonymous')
