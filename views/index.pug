body

 
  .container#welcomeToWebsite
    h1 Flashcards:
    #header2
      h6 
        br
        |  for Software Engineers
        br
        br
  .container-fluid.typewriter#welcomeCard
    h3 Welcome to the Matrix.
  button#begin(type='btn') Begin Downloading

  button#update(type='btn') Edit Card

 
  form(action='/flashcards' method='POST')
    .container#flashcardsUploaded
      .row
        input#addCardQuest(type='text' placeholder='Enter question' name='question')
      .row    
        input#addCardAnsw(type='text' placeholder='Enter answer' name='answer')
      .row
        input#addCardHint(type='text' placeholder='Enter hint' name='hint')
      button#submit(type='submit') Submit
      button#cancel(type='button' value='Reset Form' onclick='this.form.reset()') Cancel
    

  form(action='/flashcards' method='PUT')
    .container#flashcardsUpdated
      .row
        input#updateCardQuest(type='text' placeholder='Edit question' name='question')
      .row    
        input#updateCardAnsw(type='text' placeholder='Edit answer' name='answer')
      .row
        input#updateCardHint(type='text' placeholder='Edit hint' name='hint')
      button#submitPut(type='submit') Submit
      button#cancelPut(type='button' value='Reset Form' onclick='this.form.reset()') Cancel  
      
  .container#flashcardsLoaded
    .row#questionRow
      #question.typewriter
    .row#hintRow   
      #hint(type= 'hidden')
    .row#answerRow
      #answer(type= 'hidden')
    .row
      .col
        button#submitHint(type='btn') Hint
      .col
        button#submitAnswer(type='submit') Answer
    .row
      button#submitNext(type='btn') Next Card â†’
      button#addCard(type='submit') Add Card +



